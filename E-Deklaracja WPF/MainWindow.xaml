<mui:ModernWindow x:Class="FirstFloor.ModernUI.App.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  xmlns:app="clr-namespace:FirstFloor.ModernUI.App"
                  Title="{Binding Title}" IsTitleVisible="True" 
                  ContentSource="/Controls/SendControl.xaml"
                  WindowStartupLocation="CenterScreen"                  
                  Width="950" Height="500"
                  DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Wysyłanie e-deklaracji" />
        <mui:LinkGroup DisplayName="Wysłane e-deklaracje" />
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>
